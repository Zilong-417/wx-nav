/* pages/weather/weather.wxss */

.container{
    width: 100%;
    position: relative;
    border-radius: 16rpx;
}
.container image{
    position: absolute;
    width: 100%;
    opacity: 0.7;
    z-index: -1;
    border-radius: 16rpx;
}


.the-weather {
    width: 100%;
    height: 100%;
}

.wea-thead {
    width: 100%;
    text-align: center;
    overflow: hidden;

}

.we-name {
    font-size: 60rpx;
    padding-top: 40rpx;
}

.we-regime {
    font-size: 56rpx;
    margin-top: 15rpx;
}

.we-temperature {
    font-size: 88rpx;
    margin-top: 15rpx;
}

.wea-today {
    width: 100%;
    height: auto;
    overflow: hidden;
}

.today-info {
    width: 100%;
    padding: 30rpx;
    border-bottom: 1px solid #b5e4ff;
    overflow: hidden;
    box-sizing: border-box;
}

.today-info .fo-left {
    float: left;
}

.today-info .fo-left .week {
    font-size: 36rpx;
}

.today-info .fo-left .tian {
    font-size: 36rpx;
    margin-left: 10rpx;
}

.wea-describe {
    width: 100%;
    min-height: 100%;
    overflow: hidden;
    border-bottom: 1px solid #b5e4ff;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    background-color: rgb(240, 242, 245);
}

.wea-describe .des {
    font-size: 30rpx;
    line-height: 2;
}

.life-swiper {
    width: 100%;
    height: 110px;
}

.life-swiper .li-item {
    width: 100%;
    height: 100%;
    font-size: 19px;
    line-height: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}
.pos-btn {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 30rpx;
    top: 30rpx;
    background-repeat: no-repeat;
    background-size: cover;
}







