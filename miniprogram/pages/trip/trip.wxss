/* pages/trip/trip.wxss */
/*顶端提示*/
page {
    background-color: white;
    width: 100%;
    height: 100%;
}

.trip_tip {
    width: 100%;
    height: 45px;
    background-color: white;
}

.trip_tip text {
    font-size: large;
    color: black;
    font-weight: 600;
    line-height: 45px;
    margin-left: 20px;
}

/*地图*/
.map {
    position: relative;
    width: 95%;
    height: 65%;
    border-radius: 40rpx;
    border: 2px solid #CCDDFF;
    margin: 0 auto;
    overflow: hidden;
    transform: translateY(0);
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.map_change {
    position: relative;
    width: 95%;
    height: 90%;
    border-radius: 40rpx;
    border: 2px solid #CCDDFF;
    margin: 0 auto;
    overflow: hidden;
    transform: translateY(0);
}

#myMap {
    width: 100%;
    height: 100%;
}

/*放大与缩小*/
.enlarge {
    position: absolute;
    top: 10px;
    right: 10px;
    width: 80px;
    height: 30px;
    z-index: 10;
    display: table;
    background-color: white;
    border-radius: 10px;
    border: 1px solid #7bbfea;
    overflow: hidden;
}

.enlarge image {
    float: left;
    width: 30px;
    height: 30px;
    vertical-align: middle;
}

.enlarge text {
    font-size: 21px;
    font-weight: 600;
}
/*输入框文字放大提示*/
.large_text{
    position: absolute;
    display: none;
    bottom: 20%;
    left: 5%;
    width: 90%;
    height: 15%;
    border-radius: 10px;
    display: flex;
    align-items: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow:ellipsis;
    z-index: 10;
}
.large_text text{
    display: inline-block;
    border-radius: 10px;
    padding: 10px;
    font-size: 30px;
    height: 100%;
    color:	#888888;
    background-color:#F5F5F5;
    border: 1px solid #DCDCDC;
}
.triangle-down {
    position: absolute;
    bottom: 17%;
    left: 7%;
    width: 0;
    height: 0;
    border-left: 15px solid transparent;
    border-right: 15px solid transparent;
    border-top: 19px solid 	#F5F5F5;
    z-index: 15;
}
/*搜索栏*/
.search_nav {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    position: absolute;
    display: block;
    bottom: 0;
    width: 100%;
    height: 25%;
    border-radius: 15rpx;
    background-color: white;

}

.search_nav_none {
    position: absolute;
    display: none;
    bottom: 0;
    width: 100%;
    height: 17%;
    border-radius: 15rpx;
    background-color: white;
}

.search_nav .from_box image {
    position: absolute;
    width: 25px;
    height: 25px;
    left: 3%;
    top: 10%;
}

.search_nav .from_box text {
    position: absolute;
    left: 10%;
    top: 10%;
    font-size: large;
}

.search_nav .search_box image {
    position: absolute;
    width: 25px;
    height: 25px;
    left: 1%;
    top: 20%;
}

.search_nav .search_box {
    position: absolute;
    left: 2%;
    top: 30%;
    width: 78%;
    height: 30px;
    line-height: 30px;
    font-size: larger;
    padding: 10px 30px;
    border-radius: 15rpx;
    border: 1px solid #DCDCDC;
    background-color: #F5F5F5;
    margin-top: 10px;
    display: flex;
    align-items: center;
}

/*站点详情*/
.stop_detail {
    position: absolute;
    display: block;
    left: 1%;
    bottom: 0;
    width: 100%;
    height: 20%;
    margin-bottom: 10%;
    white-space: nowrap;
    border-radius: 15px;
    overflow: hidden;
}

.stop_detail_none {
    position: absolute;
    display: none;
    left: 1%;
    bottom: 2%;
    width: 95%;
    height: 20%;
    white-space: nowrap;
    border-radius: 15px;
    overflow: hidden;
}

.stop_detail_item {

    width: 100%;
    height: 100%;
    display: inline-block;
    background-color: white;
    margin-left: 4%;
    border-radius: 15px;
    overflow: hidden;
}

.stop_left {
    float: left;
    width: 70%;
    height: 100%;
}

.stop_left1 {
    height: 50%;
    border-bottom: 1px solid #ccc;
}

.stop_left1 .stop_ad {
    line-height: 70px;
    margin-left: 20px;
    font-size: large;
    font-weight: 600;
}

.stop_left>text {
    line-height: 70px;
    margin-left: 20px;
    font-size: large;
    font-weight: 400;
}

.stop_right {
    float: left;
    width: 30%;
    height: 100%;
    background-color: #7bbfea;
}

.stop_right text {
    line-height: 130px;
    text-align: center;
    font-size: larger;
    font-weight: 900;
    color: white;
    margin-left: 20px;
}

/*前往与清空*/
.sub {
    display: block;
    width: 90%;
    height: 15%;
    margin-left: 5%;
    margin-top: 5%;
    font-size: large;
    color: white;
}

.sub_none {
    display: none;
    width: 90%;
    height: 90px;
    margin-left: 5%;
    margin-top: 5%;
    font-size: large;
    color: white;
}

.sub .sub_btn {
    float: left;
    width: 45%;
    background-color: #32CD32;
    color: #F5F5F5;
    font-size: larger;
    border-radius: 100rpx;
    line-height: 70rpx;
    text-align: center;
    text-shadow: 1px 1px 1px rgba(255, 255, 255, .1);
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

/*底部栏*/
.voice_box {
    display: block;
    width: 100%;
    height: 15%;
    border-top: 1px solid #ccc;
    position: relative;
    bottom: 0;
    left: 0;
    background-color: white;
}

.voice_box_none {
    display: none;
    width: 100%;
    height: 250rpx;
    border-top: 1px solid #ccc;
    position: relative;
    background-color: white;
}

.record,
.dot {
    height: 200rpx;
    width: 200rpx;
    border-radius: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -20px;
    transform: translate(-50%, -50%);
    animation-iteration-count: 1;
}

.record {
    background: #7bbfea;
    z-index: 10;
}

.voice_box .record_img1 {
    position: absolute;
    top: 25%;
    right: 10%;
    height: 100rpx;
    width: 100rpx;
}

.voice_box .record_img2 {
    position: absolute;
    top: 25%;
    left: 10%;
    height: 100rpx;
    width: 100rpx;
}

.dot {
    background: #7bbfea;
    z-index: 9;
}

.dot-blowup {
    animation: sploosh2 1.5s cubic-bezier(0.165, 0.84, 0.44, 1);
    animation-fill-mode: forwards;
}

.dot-zoomout {
    animation: sploosh3 1.5s cubic-bezier(0.165, 0.84, 0.44, 1);
    animation-fill-mode: forwards;
}

@keyframes sploosh2 {
    0% {
        box-shadow: 0 0 0 0px#7bbfea;
        background: #7bbfea;
    }

    100% {
        box-shadow: 0 0 0 15px #AFEEEE;
        background: #AFEEEE;
    }
}

@keyframes sploosh3 {
    0% {
        box-shadow: 0 0 0 15px #AFEEEE;
        background: #AFEEEE;
    }

    100% {
        box-shadow: 0 0 0 0px #AFEEEE;
        background: #AFEEEE;
    }
}

.record image {
    height: 90rpx;
    width: 90rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 10;
    background: transparent;
    transform: translate(-50%, -50%);
}

/*出行方式选择*/
.trip_chose {
    height: 100%;
    width: 100%;
    position: fixed;
    background-color: rgba(0, 0, 0, .5);
    z-index: 50;
    top: 0;
    left: 0;
}

.trip_chose_in {
    position: absolute;
    left: 5%;
    bottom: 32%;
    width: 90%;
    height: 30%;
    background: #FFFFFF;
    border-radius: 20rpx;
    overflow: hidden;
}
.chose_text{
    width: 100%;
    height: 30%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: larger;
    font-weight: 600;
    letter-spacing: 4px;
    border-bottom: 1px solid #ccc;
    background-color: #7bbfea;
}
.chose_text image{
    position: absolute;
    right: 2%;
    width: 40px;
    height: 40px;
}
.chose_bottom{
    width: 100%;
    height: 70%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.chose_bottom .chose_left{
    float: left;
    width: 45%;
    height: 85%;
    border-radius: 10px;
    background-color: white;
    border: 1px solid #ccc;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    display: flex;
    justify-content: center;
    align-items: center;
}
.chose_left image{
    width: 50px;
    height: 50px;
}
.chose_left text{
   font-size: 20px;
   padding-left: 5px;
}