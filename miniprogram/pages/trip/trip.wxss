/* pages/trip/trip.wxss */
/*顶端提示*/
page{
    background-color: 	#F5FFFA;
}
.trip_tip{
    width: 100%;
    height: 50px;
    background-color: white;
}
.trip_tip text{
    font-size: large;
    color: black;
    font-weight: 600;
    line-height: 50px;
    margin-left: 10px;
}
/*地图*/
.map{
    border-radius:150px ;
}
#myMap{
    margin-left: 5%;
    border-radius:15rpx ;
}
/*搜索栏*/
.search_nav{
    position: relative;
    width: 90%;
    height: 100px;
    background-color: yellow;
    margin-left: 5%;
}
.search_nav text{
    position: absolute;
    left: 5%;
    top: 10%;
    font-size: large;
}
.search_nav .search_box{
    position: absolute;
    left: 5%;
    top: 35%;
    width: 90%;
    height: 50px;
    font-size: larger;
    padding: 5%;
    background-color: #ccc;
}
/*提交与清空*/
.sub{
    width: 90%;
    height: 120px;
    margin-left: 5%;
    margin-top: 5%;
}
.sub .sub_btn{
    float: left;
    width: 47%;
    background-color: yellowgreen;
}
