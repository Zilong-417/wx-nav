/* pages/my/my.wxss */
page{
    background-color: 	#F8F8FF;
}
.info_box {
    position: relative;
    width: 100%;
    height: 200px;
    background-color: aqua;
}

.top_nav .img1 {
    width: 30px;
    height: 30px;
    margin: 10px 0 0 10px;
    float: left;
}

.top_nav .img2 {
    width: 30px;
    height: 30px;
    float: right;
    margin: 10px 10px 0 0;
}

.touxiang_box {
    position: absolute;
    top: 50px;
    left: 0;
    height: 100px;
}

.touxiang_box .touxiang {
    width: 70px;
    height: 70px;
    float: left;
    margin: 10px 0 0 20px;
}

.name_box {
    width: 170px;
    height: 70px;
    float: left;
    margin: 10px 0 0 30px;
}

.name_box text {
    line-height: 70px;
    font-size: 30px;
    color: white;
    font-weight: 800;
    letter-spacing: 6px
}

.nav {
    position: absolute;
    width: 80%;
    height: 120px;
    border: 1px solid 	#DCDCDC;
    top: 160px;
    left: 5%;
    padding: 5%;
    border-radius: 10px;
    background-color:	#F5F5F5;
}
.nav_left{
    float: left;
    width: 30%;
    height: 60%;
    margin-left: 5%;
    margin-top: 3%;
}
.nav_left image{
    width: 100%;
    height: 100%;
}
.nav_left text{
    font-size: 25px;
    margin-left: 20px;
}
.nav_right{
    float: left;
    width: 30%;
    height: 60%;
    margin-left: 30%;
    margin-top: 3%;
}
.nav_right image{
    width: 100%;
    height: 100%;
}
.nav_right text{
    font-size: 25px;
    margin-left: 20px;
}